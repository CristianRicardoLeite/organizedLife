{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/organizedlife.db"
  },
  "JwtSettings": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "ExpirationInMinutes": 1440,
    "RefreshExpirationInDays": 7
  },
  "Cors": {
    "AllowedOrigins": [
      "http://frontend",
      "http://frontend:80",
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  }
}
